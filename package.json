{
  "name": "3d-gateway",
  "version": "2.7.1",
  "description": "A gateway betweem clients and interval services of 3D",
  "main": "./src/index.ts",
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.ts",
    "test:integration": "jest --config=./tests/configurations/integration/jest.config.ts --runInBand",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint:openapi": "npx @redocly/cli lint --format=github-actions ./bundledApi.yaml",
    "lint": "eslint . && helm lint ./helm",
    "lint:fix": "eslint --fix . && helm lint ./helm",
    "release": "standard-version",
    "test": "npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json  && npm run assets:copy",
    "start": "npm run build && cd dist && node ./index.js",
    "start:dev": "npm run build && cd dist && node --enable-source-maps ./index.js",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles -f ./bundledApi.yaml ./dist/ && copyfiles ./package.json dist",
    "clean": "rimraf dist coverage reports",
    "install": "npx husky install",
    "copySchema": "copyfiles -u 5 \"./node_modules/@map-colonies/mc-model-types/Schema/yaml/**/*\" ./Schema",
    "prebundleOpenApi": "npm run copySchema",
    "bundleOpenApi": "openapi bundle --output ./bundledApi.yaml --ext yaml ./openapi3.yaml",
    "postbundleOpenApi": "rimraf Schema"
  },
  "directories": {
    "test": "tests"
  },
  "author": "MapColonies",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.511.0",
    "@godaddy/terminus": "^4.12.1",
    "@map-colonies/error-express-handler": "^2.1.0",
    "@map-colonies/express-access-log-middleware": "^2.0.1",
    "@map-colonies/js-logger": "^1.0.1",
    "@map-colonies/mc-model-types": "^19.0.0",
    "@map-colonies/mc-priority-queue": "^8.2.1",
    "@map-colonies/openapi-express-viewer": "^3.0.0",
    "@map-colonies/read-pkg": "0.0.1",
    "@map-colonies/storage-explorer-middleware": "^1.2.5",
    "@map-colonies/telemetry": "^6.1.0",
    "@map-colonies/types": "^1.7.0",
    "@opentelemetry/api": "1.7.0",
    "@opentelemetry/api-metrics": "0.23.0",
    "@opentelemetry/instrumentation-express": "0.32.1",
    "@opentelemetry/instrumentation-http": "0.35.1",
    "@turf/turf": "^7.0.0",
    "@types/geojson": "^7946.0.8",
    "ajv": "^8.12.0",
    "axios": "^0.27.2",
    "compression": "^1.7.4",
    "config": "^3.3.9",
    "express": "^4.19.2",
    "express-openapi-validator": "^5.0.4",
    "http-status-codes": "^2.3.0",
    "proj4": "^2.8.0",
    "prom-client": "^15.1.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@faker-js/faker": "^9.2.0",
    "@map-colonies/eslint-config": "^4.0.0",
    "@map-colonies/prettier-config": "0.0.1",
    "@map-colonies/standard-version-update-helm-version": "^2.0.1",
    "@map-colonies/standard-version-update-openapi3-version": "0.0.2",
    "@redocly/cli": "^1.34.3",
    "@redocly/openapi-cli": "^1.0.0-beta.94",
    "@types/axios": "^0.14.0",
    "@types/compression": "^1.7.2",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.7",
    "@types/proj4": "^2.5.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "commitlint": "^17.6.6",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "docker-compose": "^0.24.8",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-create-mock-instance": "^2.0.0",
    "jest-html-reporters": "^3.1.4",
    "jest-mock-axios": "^4.6.1",
    "jest-openapi": "^0.14.2",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.1",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^5.3.3"
  }
}
